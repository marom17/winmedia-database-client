<Page x:Class="Winmedia_Database_Client.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Winmedia_Database_Client"
      mc:Ignorable="d" 
      d:DesignHeight="280" d:DesignWidth="180"
      Title="CalendarPage">
    <Border Background="GhostWhite" BorderBrush="Silver" BorderThickness="1" CornerRadius="8,8,3,3">
        <StackPanel Orientation="Vertical">
            <Calendar Name="PlaylistDate" SelectedDatesChanged="PlaylistDate_SelectedDatesChanged"  FirstDayOfWeek="Monday" HorizontalAlignment="Stretch" GotMouseCapture="PlaylistDate_GotMouseCapture"/>
            <WrapPanel Name="HourPanel" Orientation="Vertical" MaxHeight="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>    
</Page>
